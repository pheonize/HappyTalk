<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"/>
    <ImageView
        android:id="@+id/sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/help"/>
    <ImageView
        android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sound"
        android:paddingTop="5dp"
        android:src="@drawable/favorite"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp">
    <TextView
        android:id="@+id/txtWordFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="25dp"
        android:text="test1"/>
    <!--<TextView-->
        <!--android:id="@+id/txtWordEN"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_below="@id/txtWordFrom"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:paddingLeft="25dp"-->
        <!--android:text="test2"/>-->
        <TextView
            android:id="@+id/txtWordTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txtWordFrom"
            android:layout_centerVertical="true"
            android:paddingLeft="25dp"
            android:text="test3"/>
    <TextView
        android:id="@+id/txtKaraokeEN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txtWordTo"
        android:layout_centerVertical="true"
        android:paddingLeft="25dp"
        android:text="test4"/>
        <TextView
            android:id="@+id/txtKaraokeTH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txtKaraokeEN"
            android:layout_centerVertical="true"
            android:paddingLeft="25dp"
            android:text="test5"/>
    </LinearLayout>


</RelativeLayout>
