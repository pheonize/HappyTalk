        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
            android:id="@+id/txtLangFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="Lang From "
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/txtWordFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/txtLangFrom"
            android:text="Word From"
            android:textSize="18sp"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/txtLangTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:text="Lang To"
                android:textSize="14sp"
                />
        <TextView
            android:id="@+id/txtWordTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/txtLangTo"
            android:text="Word To"
            android:textSize="18sp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="karaoke TH :"
                android:layout_marginRight="10dp"
                android:textSize="14sp"/>
        <TextView
            android:id="@+id/txtKaraokeTH"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/title1"
            android:layout_marginBottom="10dp"
            android:text="Karaoke TH"
            android:textSize="18sp"
            />
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="karaoke EN :"
            android:layout_marginRight="10dp"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/txtKaraokeEN"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/title2"
            android:layout_marginBottom="10dp"
            android:text="Karaoke EN"
            android:textSize="18sp"
            />
</LinearLayout>
        <LinearLayout
